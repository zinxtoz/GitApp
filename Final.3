using System;
using System.Collections.Generic;
using System.Linq;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            List<int> data = new List<int>();
            Console.Write("Enter number: ");
            string num = Console.ReadLine();
            data.Add(int.Parse(num));
            while (num != "End")
            {
                Console.Write("Enter number or type End to stop: ");
                num = Console.ReadLine();
                if (num != "End") { 
                data.Add(int.Parse(num));
                }
            }
            Console.WriteLine(string.Join(", ", data));

            Console.Write("Select Mode (FindMax/FindMin/FindMean): ");
            string mode = Console.ReadLine();
            while (mode != "FindMax" && mode != "FindMin" && mode != "FindMean")
            {
                Console.WriteLine("Invalid mode");
                Console.Write("Select Mode (FindMax/FindMin/FindMean): ");
                mode = Console.ReadLine();
            }
                if (mode == "FindMax")
                {
                    Console.WriteLine(data.Max());
                }
                else if (mode == "FindMin")
                {
                    Console.WriteLine(data.Min());
                }
                else if (mode == "FindMean")
                {
                    Console.WriteLine(data.Average());
                }
                
        }
    }
} 

